<Configuration>
    <Appenders>
        <File name="MyFile" fileName="logs/myapp.log">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
        </File>
    </Appenders>
    <Loggers>
        <Root level="ERROR">
            <AppenderRef ref="MyFile" />
        </Root>
    </Loggers>
</Configuration>